with "../BBS-Ada/bbs_raven.gpr";
with "bbs_lisp.gpr";

project Lispq is

   for Source_Dirs use (".");
   for Object_Dir use "obj";
   for Main use ("lisp.adb");
   for Exec_Dir use ".";

   package Builder is
      for Switches ("ada") use ("-g", "-s", "-j4");
   end Builder;

   package Compiler is
      for Switches ("ada") use ("-g", "-gnato", "-gnatp", "-fstack-check", "-gnatf", "-gnat12", "-fcallgraph-info=su,da", "-gnata", "-gnatVa", "-gnatw.X.d.f.g.h.k.l.n.o.s.u.wadhlt");
   end Compiler;

   package Binder is
      for Switches ("ada") use ("-E", "-r");
   end Binder;

   package Linker is
      for Switches ("ada") use ("-g");
   end Linker;

   package Prove is
      for Switches use ("--level=0", "--codepeer=on", "-j4");
   end Prove;

end Lispq;

